{
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019", "ES2020"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@constants/*": ["constants/*"],
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "ormconfig.ts",
  ]
}
